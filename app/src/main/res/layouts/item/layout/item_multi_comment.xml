<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_multi_comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="这个人"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_multi_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="回复"
        app:layout_constraintBottom_toBottomOf="@+id/item_multi_comment_user_name"
        app:layout_constraintStart_toEndOf="@+id/item_multi_comment_user_name"
        app:layout_constraintTop_toTopOf="@+id/item_multi_comment_user_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_multi_comment_back_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="那个人"
        app:layout_constraintBottom_toBottomOf="@+id/item_multi_comment_text"
        app:layout_constraintStart_toEndOf="@+id/item_multi_comment_text"
        app:layout_constraintTop_toTopOf="@+id/item_multi_comment_text" />

    <TextView
        android:id="@+id/item_multi_comment_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/item_multi_comment_back_user_name"
        app:layout_constraintStart_toEndOf="@+id/item_multi_comment_back_user_name"
        app:layout_constraintTop_toTopOf="@+id/item_multi_comment_back_user_name" />

    <TextView
        android:id="@+id/item_multi_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="评论内容"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_multi_comment_text1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>